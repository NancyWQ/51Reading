.top{
  width: 100%;
  height:60px;
  padding:5px 0px;
  margin-left:10px;
  border-bottom: 1px solid #ddd;
  position: relative;
}
.top>image{
  width:50px;
  height: 50px;
}
.top>text{
  height: 50px;
  font-size:20px;
  line-height: 100%;
  position: absolute;
  top:20px;
  left:70px;
}
.userItem{
  padding:5px 0px;
  margin-left:10px;
  border-bottom: 1px solid #ddd;
  position: relative;
  height:30px;
}
.userItem :first-child{
  color:#0A50CC;
  height: 30px;
}
.userItem>.row{
  height: 30px;
  position: absolute;
  right:10px;
  color:#ddd;
  font-weight:700;
}